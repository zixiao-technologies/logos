{
  "name": "Logos",
  "version": "2026.4.6",
  "description": "Logos - A Modern, Lightweight Code Editor",
  "author": {
    "name": "Zixiao System",
    "email": "hwllochen@qq.com"
  },
  "license": "MIT",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "build:daemon": "cd logos-lang && cargo build --release --package logos-daemon",
    "preview": "vite preview",
    "electron:dev": "vite --mode electron",
    "electron:build": "npm run build",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "postinstall": "electron-rebuild -f -w node-pty"
  },
  "keywords": [
    "ide",
    "devops",
    "logos",
    "electron"
  ],
  "dependencies": {
    "@mdui/icons": "^1.0.1",
    "@sentry/electron": "^7.5.0",
    "@sentry/vite-plugin": "^4.7.0",
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/debugprotocol": "^1.68.0",
    "@xterm/addon-fit": "^0.9.0",
    "@xterm/addon-web-links": "^0.10.0",
    "@xterm/xterm": "^5.4.0",
    "axios": "^1.6.8",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "mdui": "^2.0.0",
    "monaco-editor": "^0.47.0",
    "monaco-languageclient": "^8.8.3",
    "node-pty": "^1.0.0",
    "pinia": "^2.1.7",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "overrides": {
    "tar": "^7.5.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/node": "^20.12.2",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^4.0.17",
    "@vue/test-utils": "^2.4.6",
    "electron": "^39.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "0.25.0",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.33.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^6.4.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vitest": "^4.0.17",
    "vue-tsc": "^2.0.7"
  },
  "build": {
    "appId": "io.zixiao.logos",
    "productName": "Logos",
    "publish": [
      {
        "provider": "github",
        "owner": "Zixiao-System",
        "repo": "logos"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "extraResources": [
        {
          "from": "logos-lang/target/release/logos-daemon",
          "to": "bin/logos-daemon"
        }
      ],
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "extraResources": [
        {
          "from": "logos-lang/target/release/logos-daemon.exe",
          "to": "bin/logos-daemon.exe"
        }
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "extraResources": [
        {
          "from": "logos-lang/target/release/logos-daemon",
          "to": "bin/logos-daemon"
        }
      ],
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    }
  }
}
