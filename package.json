{
  "name": "logos",
  "version": "0.1.1",
  "description": "logos - PRTS DevOps Platform",
  "author": "Zixiao System",
  "license": "MIT",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite --mode electron",
    "electron:build": "npm run build",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx --fix",
    "postinstall": "electron-rebuild -f -w node-pty",
    "download:lsp": "npx ts-node scripts/download-lsp-servers.ts",
    "download:lsp:pyright": "npx ts-node scripts/download-lsp-servers.ts --pyright",
    "download:lsp:gopls": "npx ts-node scripts/download-lsp-servers.ts --gopls",
    "download:lsp:rust-analyzer": "npx ts-node scripts/download-lsp-servers.ts --rust-analyzer",
    "download:lsp:jdtls": "npx ts-node scripts/download-lsp-servers.ts --jdtls"
  },
  "keywords": [
    "ide",
    "devops",
    "logos",
    "electron"
  ],
  "dependencies": {
    "@mdui/icons": "^1.0.1",
    "@xterm/addon-fit": "^0.9.0",
    "@xterm/addon-web-links": "^0.10.0",
    "@xterm/xterm": "^5.4.0",
    "axios": "^1.6.8",
    "mdui": "^2.0.0",
    "monaco-editor": "^0.47.0",
    "node-pty": "^1.0.0",
    "pinia": "^2.1.7",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-uri": "^3.1.0",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/node": "^20.12.2",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "electron": "^29.1.6",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.33.0",
    "globals": "^16.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^5.2.8",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.0.7"
  },
  "build": {
    "appId": "io.zixiao.logos",
    "productName": "logos",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/bin/${os}-${arch}",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    }
  }
}
